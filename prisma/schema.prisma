generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String?
  name          String?
  avatar        String?
  profilehandle String?  @unique
  createdAt     DateTime @default(now())
  Links         Links[]
}

model Links {
  id          Int     @id @default(autoincrement())
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
  userHandle  String? @unique
  instagram   String? @unique
  twitter     String? @unique
  linkedin    String? @unique
  github      String? @unique
  youtube     String? @unique
  figma       String? @unique
  hashnode    String? @unique
  medium      String? @unique
  producthunt String? @unique
  gumroad     String? @unique
  substack    String? @unique
  twitch      String? @unique
}
